<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="BMSummary">


        <TextView
            android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summary"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="normal|bold"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:paddingTop="@dimen/activity_vertical_margin"/>

        <Button
            android:id="@+id/back_button"
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_weight="0"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:onClick="showToast"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/summary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:id="@+id/textViewSummary"
            android:textAlignment="viewStart"
            android:typeface="normal"
            android:textStyle="normal|bold"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"/>

        <TextView
            android:id="@+id/randomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewSummary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:text="Countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/randomTextView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:id="@+id/textView"
            android:layout_below="@+id/textViewSummary"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/randomTextView"
            android:layout_toEndOf="@+id/textView"
            android:layout_marginStart="17dp"
            android:id="@+id/textView2"/>

        <TextView
            android:text="Expiry Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_toStartOf="@+id/textView2"
            android:layout_marginTop="32dp"
            android:id="@+id/textView3"/>

        <TextView
            android:text="Projected Girth/Size:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="41dp"
            android:id="@+id/textView4"/>

        <TextView
            android:text="Estimated Weight Loss:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginTop="44dp"
            android:id="@+id/textView5"/>

        <TextView
            android:text="Number of Flushes:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginTop="62dp"
            android:id="@+id/textView6"/>

        <TextView
            android:text="Toilet Paper Required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_marginTop="37dp"
            android:id="@+id/textView7"/>

</RelativeLayout>